<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Create New Listing</title>

  <!-- google fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Rubik:wght@400;700&display=swap" rel="stylesheet">


  <!-- style sheets -->
  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
  <link rel="stylesheet" href="/styles/main.css" type="text/css" />
  <link rel="stylesheet" href="/styles/navbar.css" type="text/css" />

  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/scripts/app.js"></script>
</head>

<body>

  <header><%- include('partials/_header') %></header>

  <!-- Page-specific (main) content here -->
  <main class="container">
    <h1 class="super_headline">Create New Listing</h1>
    <div class="create">
    <form action="newListing" method="POST" id="create_listing">

      <!-- name, description, price, thumbnail_url, posted_at -->

      <div class="create_form">
        <label for="beverage">Beverage</label>
        <input type="text" name="beverage" placeholder="Beverage" id="beverage_name">
        <label for="price">Price</label>
        <input type="number" name="price" placeholder="$" id="price">
      </div>

      <div class="create_form">
        <label for="category">Category</label>
        <input type="text" name="category" placeholder="Sour Beers" id="category">
        <label for="country">Country</label>
        <input type="text" name="country" placeholder="Canada" id="country">
      </div>

      <div class="create_form">
        <label for="thumbnail_url">Thumbnail Url</label>
        <input type="text" name="thumbnail_url" placeholder="https://" id="thumbnail_url">
        <label for="description">Description</label>
        <input type="text" name="description" placeholder="Description" id="description">
      </div>

      <div class="create_form">
          <button>Submit</button>
          <a id="create_form_clear" href="/newListing">Reset</a>
      </div>
    </form>
  </div>

    <section id="listings-container">
      <% for (const beverage of beverages) {%>
        <div class="card_container_with_buttons">
          <!-- Container for INDIVIDUAL card -->
        <div class="card_frame">

          <div class ="top_of_card">
          <div class="image"><img class="thumbnail" src="<%= beverage.thumbnail_url %>"></div>
          <h3><%= beverage.name %></h3>
          <p class="listingDescription"><%= beverage.description %></p></div>

            <!-- Container for Footer of Card -->
            <div class="listingFooter">

              <!-- Container for Elements in Footer -->
              <div class="listing_footer_elements">
              <p class="price">$<%= beverage.price %></p>
              <div class="cardmail"> <img class="small_mail" src="../images/mail.png"></div>
              <div class="postedat"><p >Posted at<%= beverage.posted_at %></p></div>
              <img class="heart" src="../images/heart.png">
              <!-- <div class="icon">
              </div> -->
            </div>
          </div>
        </div>
        <!-- Buttons -->
            <div class="buttons">
              <form action="listings/favourites" method="POST" id="favourites">
                <input type="hidden" name="is_favourite" value=<%= beverage.id %>>
                <!-- <button class="sold_id">Add to Favourites</button> -->
              </form>
            </div>
          </div>
        <%}%>



    </section>
  </main>
  <div class="bottomGradientBar"></div>
</body>

</html>
