<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>GitPub</title>

    <!-- google fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Rubik:wght@400;700&display=swap"
      rel="stylesheet"
    />

    <!-- style sheets -->
    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="/styles/main.css" type="text/css" />
    <link rel="stylesheet" href="/styles/navbar.css" type="text/css" />

    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>
  </head>

  <body>

      <header><%- include('partials/_header') %></header>

    <!-- Page-specific (main) content here -->
    <main class="container">
      <h1>GitPub Specials</h1>
      <section id="listings-container">
        <% for (const beverage of beverages) {%>
          <% if (beverage.is_available) {%>
          <div class="listing">
            <header class="image">
              <div class="userListing">
                <img class="thumbnail" src="<%= beverage.thumbnail_url %>">
              </div>
            </header>
            <h3><%= beverage.name %></h3>
            <p class="listingDescription"><%= beverage.description %></p>
            <footer>
              <div class="listingFooter">
                <p>$<%= beverage.price %></p>
                <div class="icon">
                  <p>Posted at<%= beverage.posted_at %></p>
                  <img src="../images/heart.svg">
                </div>
              </div>
            </footer>

              <div class="buttons">
                <form action="/favourites" method="POST" id="favourites">
                  <input type="hidden" name="is_favourite" value=<%= beverage.id %>>
                  <button class="sold_id">Add to Favourites</button>
                </form>
              </div>

          </div>
          <%} else {%>
            <div class="listing">
              <header class="image">
                <div class="userListing">
                  <img class="thumbnail" src="<%= beverage.thumbnail_url %>">
                </div>
              </header>
              <h3><%= beverage.name %> - HAS BEEN SOLD!!!</h3>
              <p class="listingDescription"><%= beverage.description %></p>
              <footer>
                <div class="listingFooter">
                  <p>$<%= beverage.price %></p>
                  <div class="icon">
                    <p>Posted at<%= beverage.sold_at %></p>
                    <img src="../images/heart.svg">
                  </div>
                </div>
              </footer>

                <div class="buttons">
                  <form action="/favourites" method="POST" id="favourites">
                    <input type="hidden" name="is_favourite" value=<%= beverage.id %>>
                    <button class="sold_id">Add to Favourites</button>
                  </form>
                </div>

            </div>
            <%}%>
        <%}%>

      </section>
    </main>
    <div class="bottomGradientBar"></div>
  </body>
</html>

